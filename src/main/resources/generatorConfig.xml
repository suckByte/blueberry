<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
	<!--导入属性的配置 -->
	<!-- <properties resource="datasource.properties"></properties> -->

	<!--指定特定数据库的jdbc驱动jar包的位置 -->
	<classPathEntry location="mysql-connector-java-5.1.6.jar" />

	<context id="default" targetRuntime="Mybatis3">

		<!-- optional 旨在创建class时候对注释进行控制 -->
		<commentGenerator>
			<property name="supperessDate" value="true" />
			<property name="supperessAllComments" value="true" />
		</commentGenerator>

		<!--jdbc数据库连接 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://localhost:3306/blueberry?characterEncoding=utf-8" userId="root" password="666666"></jdbcConnection>

		<!--非必需，类型处理器，在数据库类型和Java类型之间的转换控制 -->
		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<!-- 生成模型的包名和位置 -->
		<javaModelGenerator targetPackage="com.blueberry.pojo" targetProject="src">
			<!-- 是否允许子包，即targetPackage.schemaName.tableName -->
			<property name="enableSubPackages" value="false" />
			<!-- 是否对model添加构造函数 -->
			<property name="constructorBased" value="true" />
			<!-- 是否对类CHAR类型的列的数据进行trim操作 -->
			<property name="trimStrings" value="true" />
			<!-- 建立的Model对象是否不可改变 即生成Model对象不会有 setter方法，只有构造方法 -->
			<property name="immutable" value="false" />
		</javaModelGenerator>

		<!-- mapper 映射文件生成所在的目录 为每一个数据库的表生成对应的sqlMap文件 -->
		<sqlMapGenerator targetPackage="mappers" targetProject="src">
			<property name="enableSubPackages" value="false" />
		</sqlMapGenerator>

		<!-- 客户端代码，生成易于使用的针对Model对象和xml配置文件的代码 type='ANNOTATEDMAPPER', 生成Java Model 
			和基于注解的Mapper对象 type="MIXEDMAPPER", 生成基于注解的Java Model 和相应的Mapper对象 type="XMLMAPPER", 
			生成SQLMap XML文件和独立的Mapper接口 -->
		<!--targetPackage： mapper接口dao生成的位置 -->
		<javaClientGenerator type="XMLMAPPER"
			targetPackage="com.blueberry.dao" targetProject="src">
			<!-- enableSubPackages: 是否让schema作为包的后缀 -->
			<property name="enableSubPackages" value="false" />
		</javaClientGenerator>
		
		<table tableName="t_test" domainObjectName="User" enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false" enableSelectByExample="false" selectByExampleQueryId="false"></table>
	</context>
</generatorConfiguration>
